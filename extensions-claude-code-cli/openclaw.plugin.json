{
  "id": "claude-code-cli",
  "name": "Claude Code CLI",
  "description": "Bridge provider that routes requests to the Claude Code CLI via HTTP bridge and Arinova Chat agent.",
  "providers": ["claude-code-cli"],
  "configSchema": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "port": {
        "type": "number",
        "description": "HTTP bridge port"
      },
      "claudePath": {
        "type": "string",
        "description": "Path to the claude CLI binary"
      },
      "codexPath": {
        "type": "string",
        "description": "Path to the codex CLI binary (default: auto-detect)"
      },
      "codexModels": {
        "type": "array",
        "items": { "type": "string" },
        "description": "Model IDs that route to the Codex CLI backend"
      },
      "timeoutMs": {
        "type": "number",
        "description": "CLI timeout in milliseconds"
      },
      "mcpConfigPath": {
        "type": "string",
        "description": "Path to MCP servers JSON config file (passed to claude --mcp-config)"
      },
      "arinova": {
        "type": "object",
        "description": "Arinova Chat agent connection settings",
        "properties": {
          "serverUrl": {
            "type": "string",
            "description": "WebSocket server URL (e.g. wss://api.chat.arinova.ai)"
          },
          "botToken": {
            "type": "string",
            "description": "Bot token from the Arinova dashboard"
          }
        }
      },
      "defaults": {
        "type": "object",
        "description": "Default settings for sessions",
        "properties": {
          "cwd": {
            "type": "string",
            "description": "Default working directory for Claude processes"
          },
          "maxSessions": {
            "type": "number",
            "description": "Maximum concurrent sessions (default: 5)"
          },
          "idleTimeoutMs": {
            "type": "number",
            "description": "Idle session timeout in milliseconds (default: 600000)"
          }
        }
      }
    }
  }
}
